                        });
                        $(radio).attr("data-url", postData[i].Type === "blog" ? "/blog/getpost?purl=" + postData[i].UrlId : "/video/player?v=" + postData[i].UrlId);
                        $(radio).attr("data-url-title", postData[i].Title);
